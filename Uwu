<body>
  <div class="cat">🐈‍⬛</div>
  <h1>El Gato Cósmico de Shanwo</h1>
  <div id="question">¿Estás lista para tus verdades de cumpleaños?</div>
  <div>
    <button class="btn" onclick="answer('yes')">Sí</button>
    <button class="btn" onclick="answer('no')">No</button>
  </div>
  <div id="answer"></div>
  <footer>Feliz cumpleaños, Yessii 🐾 — Shanwo, edición cósmica</footer>

  <script>
    const questions = [
      "¿Estás aceptando menos de lo que mereces?",
      "¿Has dormido lo suficiente o sigues peleando con tus pensamientos?",
      "¿Aún piensas en quien no te ve?",
      "¿Te estás dando amor o solo distracciones?",
      "¿Sabes lo increíble que eres o todavía dudas?",
      "¿Te reíste hoy, aunque sea un poco?"
    ];

    const answers = {
      yes: [
        "Miau... interesante decisión, humana. ¿También coleccionas desilusiones estelares?",
        "Así me gusta. El universo ronronea a tu favor.",
        "Por fin, la galaxia respira tranquila.",
        "Excelente. El descanso también es revolución.",
        "Sabía que en ti hay magia, no duda.",
        "Bien, reír es sobrevivir sin pedir permiso."
      ],
      no: [
        "Entonces hoy toca aprenderlo. Empieza con una siesta y paciencia.",
        "Y así quieren que crezcas emocionalmente, sin dormir ni quererte.",
        "Increíble, ni los agujeros negros son tan densos.",
        "Entonces mímate, que no hay repuesto de alma.",
        "Mira tú, la inseguridad disfrazada de modestia.",
        "Hazlo ahora. Miau serio: no pospongas tu alegría."
      ]
    };

    let current = 0;

    function answer(choice) {
      const response = answers[choice][current % answers[choice].length];
      document.getElementById("answer").innerText = response;
      current++;
      if (current < questions.length) {
        document.getElementById("question").innerText = questions[current];
      } else {
        document.getElementById("question").innerText =
          "Eso fue todo. El Gato Cósmico te aprueba con un ronroneo universal.";
      }
    }
  </script>
</body>

      text-align: center;
    }

    h1 {
      font-size: 2.5em;
      margin-bottom: 0.5em;
      color: #d3bfff;
    }

    #question {
      font-size: 1.3em;
      margin-bottom: 1em;
      color: #e4d7ff;
    }

    .btn {
      background-color: #302547;
      border: none;
      color: #fff;
      padding: 10px 25px;
      margin: 8px;
      border-radius: 25px;
      cursor: pointer;
      font-size: 1em;
      transition: 0.3s;
    }

    .btn:hover {
      background-color: #4e3b6c;
    }

    #answer {
      margin-top: 1.5em;
      font-style: italic;
